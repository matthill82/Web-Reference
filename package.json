{
  "name": "web-reference-mobile-seed",
  "version": "1.1.1",
  "description": "severn trent mobile and web framework, it has it's own walkthrough slides before main app module",
  "main": "app.module.js",
  "repository" : {
    "type" : "git",
    "url" : ""
  },
  "license" : "MIT",
  "scripts": {

    "start": "env UV_THREADPOOL_SIZE=100 webpack-dev-server --progress --colors --watch",
    "analyse": "env UV_THREADPOOL_SIZE=100 webpack-dev-server --progress --colors --watch --display-modules --display-chunks --display-reasons --release=dev",

    "dev"  : "env UV_THREADPOOL_SIZE=100 webpack-dev-server --open --progress --colors --watch --display-modules --display-chunks --display-reasons --release=dev",
    "build": "webpack --config webpack.config.js --release=production",

    "lint": "eslint app",

    "es6test": "node node_modules/eslint/bin/eslint.js -c .eslintrc ./app",
    "jstest": "node node_modules/jshint/dist/jshint.js --verbose ./app",

    "jsdocs": "rm -rf ./docs && node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "es6docs": "./node_modules/.bin/esdoc -c esdoc.json"

  },
  "devDependencies": {
    "autoprefixer": "latest",
